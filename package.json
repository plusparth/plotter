{
	"name": "plotter",
	"productName": "Plotter",
	"version": "1.0.2",
	"description": "Plots the output CSVs from HelixLogger",
	"license": "MIT",
	"repository": "plato2000/plotter",
	"author": {
		"name": "Parth Oza",
		"email": "parth@team4099.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np"
	},
	"dependencies": {
		"chart.js": "^2.9.3",
		"csv-parse": "^4.7.0",
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-settings": "^3.2.0",
		"electron-store": "^4.0.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.12.0",
		"jquery": "^3.4.1",
		"moment": "^2.29.2",
		"nouislider": "^14.0.3",
		"randomcolor": "^0.5.4",
		"remote": "^0.2.6"
	},
	"devDependencies": {
		"electron": "^7.2.4",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"xo": "^0.24.0"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"rules": {
			"new-cap": "warn"
		}
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.team4099.Plotter",
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		},
		"scripts": {
			"publishMac": "GH_TOKEN=5dd7feec83338d183cb57c23a3812baac1ffdf71 build -p always"
		}
	}
}
